<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Circle background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#BB86FC" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>
    
    <!-- Optional inner shadow for depth -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:startColor="#10000000"
                android:endColor="#00000000" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>
</layer-list> 